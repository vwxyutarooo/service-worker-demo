{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ignore": ["gulpfile.*", "webpack.config.*", "bundle.*.js", "public/", "tools/", "*.pug"],
  "plugins": ["vue", "react"],
  "extends": ["eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-console": [
      "error",
      { "allow": ["log", "debug", "error", "warn"] }
    ],
    "no-process-env": 0,
    "no-unused-vars": 1,
    "object-shorthand": 0,
    "semi": ["error", "always"]
  }
}
